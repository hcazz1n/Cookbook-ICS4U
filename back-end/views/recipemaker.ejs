<h1>Recipe Dashboard</h1>
<h3>Separate each ingredient using commas</h3>
<form action="/recipe" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="author">Author</label>
        <input type="text" id="author" name="author" required>
    </div>
    <div>
        <label for="ingredients">Ingredients</label>
        <input type="text" id="ingredients" name="ingredients" required>
    </div>
    <div>
        <label for="keywords">Keywords</label>
        <input type="text" id="keywords" name="keywords" required>
    </div>
    <div>
        <label for="Images">Image</label>
        <input type="text" id="images" name="images" required>
    </div>
    <div>
        <label for="isDessert">Dessert?</label>
        <select name="isDessert" id="isDessert">
            <option value=true>Yes</option>
            <option value=false>No</option>
        </select>
    </div>
    <div>
        <label for="instructions">Instructions</label>
        <br>
        <textarea name="instructions" id="instructions" cols="50" rows="10" placeholder="Put each step on a new line (press enter after each step)"></textarea>
    </div>
    <button type="submit">Upload</button>
</form>
<a href="/">Home</a>
<script src="/back-end/server/index.js" type="text/javascript"></script>